{
  "name": "5chan-board-cli",
  "version": "0.1.0",
  "description": "4chan-style thread auto-archiving and purging for plebbit-js subplebbits",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plebbit/5chan_board_custom_community.git"
  },
  "type": "module",
  "files": [
    "dist",
    "bin",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "5chan": "./bin/run.js"
  },
  "oclif": {
    "bin": "5chan",
    "dirname": "5chan",
    "commands": "./dist/commands",
    "topicSeparator": " ",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "prepare": "husky && npm run build",
    "release": "HUSKY=0 release-it --config config/.release-it.json",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.e2e.config.ts"
  },
  "dependencies": {
    "@oclif/core": "4.8.0",
    "@oclif/plugin-help": "6.2.37",
    "@plebbit/plebbit-js": "git+https://github.com/plebbit/plebbit-js.git#a92fb7e82b4a534c160fc74dc1902d63e24e3142",
    "env-paths": "4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@release-it/conventional-changelog": "10.0.5",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "release-it": "19.2.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
