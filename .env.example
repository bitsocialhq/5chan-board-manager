# Path to plebbit data directory
PLEBBIT_DATA_PATH=

# Threads per index page (default: 15, 4chan range: 15-30)
PER_PAGE=15

# Number of index pages (default: 10, 4chan range: 1-10)
PAGES=10

# Max replies before thread is locked (default: 300, 4chan range: 300-500)
BUMP_LIMIT=300

# Seconds before locked threads are purged (default: 172800 = 48h)
ARCHIVE_PURGE_SECONDS=172800
